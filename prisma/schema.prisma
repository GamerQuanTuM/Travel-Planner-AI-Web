generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TravelType {
  SOLO
  COUPLE
  FRIENDS
  FAMILY
}

enum BudgetType {
  CHEAP
  MODERATE
  LUXURY
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  name      String
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  itinerary Itinerary[]
}

model Itinerary {
  id           String     @id @default(cuid())
  history      Json[]
  trip         Json
  cover        String     @default("https://aitrip.tubeguruji.com/placeholder.jpg")
  destination  String
  travelOrigin String
  duration     String
  travelType   TravelType
  budgetType   BudgetType
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  User         User?      @relation(fields: [userId], references: [id])
  userId       String?
}

model Feedback {
  id        String   @id @default(cuid())
  email     String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
